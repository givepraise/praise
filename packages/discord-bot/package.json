{
  "name": "discord-bot",
  "version": "0.4.0",
  "license": "GPL-3.0-or-later",
  "description": "The Praise Discord bot is the main way for users to interact with the Praise system.",
  "dependencies": {
    "@discordjs/builders": "^0.12.0",
    "@discordjs/rest": "^0.3.0",
    "@types/node": "^17.0.23",
    "api": "*",
    "discord-api-types": "^0.26.1",
    "discord.js": "^13.6.0",
    "env-cmd": "^10.1.0",
    "jet-logger": "^1.1.5",
    "mongoose": "^6.2.0",
    "randomstring": "^1.2.2",
    "ts-node": "^10.5.0"
  },
  "devDependencies": {
    "@types/randomstring": "^1.1.8",
    "eslint": "^8.8.0",
    "nodemon": "^2.0.15",
    "typescript": "^4.5.5"
  },
  "scripts": {
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "load-env": "env-cmd --silent -f ../../.env env-cmd --silent",
    "start": "yarn run load-env ts-node --transpile-only ./src",
    "start:dev": "yarn run load-env nodemon ./src"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts, html",
    "exec": "ts-node --files"
  }
}
