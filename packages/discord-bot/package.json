{
  "name": "discord-bot",
  "version": "0.0.1",
  "license": "GPL-3.0-or-later",
  "description": "The Praise Discord bot is the main way for users to interact with the Praise system.",
  "dependencies": {
    "@discordjs/builders": "^0.12.0",
    "@discordjs/rest": "^0.3.0",
    "api": "*",
    "discord-api-types": "^0.26.1",
    "discord.js": "^13.6.0",
    "dotenv": "^16.0.0",
    "jet-logger": "^1.1.5",
    "mongoose": "^6.2.0",
    "randomstring": "^1.2.2",
    "ts-node": "^10.5.0"
  },
  "devDependencies": {
    "@types/randomstring": "^1.1.8",
    "eslint": "^8.8.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "typescript": "^4.5.5"
  },
  "scripts": {
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "start": "ts-node --transpile-only ./src",
    "start:dev": "nodemon ./src"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts, html",
    "exec": "ts-node --files"
  }
}
