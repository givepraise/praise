{
  "name": "discord-bot",
  "version": "0.13.1",
  "license": "GPL-3.0-or-later",
  "description": "The Praise Discord bot is the main way for users to interact with the Praise system.",
  "dependencies": {
    "@discordjs/builders": "^1.2.0",
    "@discordjs/rest": "^1.2.0",
    "@types/node": "^17.0.23",
    "api": "*",
    "date-fns": "^2.28.0",
    "discord-api-types": "^0.37.11",
    "discord.js": "^14.5.0",
    "env-cmd": "^10.1.0",
    "mongoose": "^6.10.2",
    "randomstring": "^1.2.2",
    "ts-node": "^10.5.0",
    "winston": "^3.8.2",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@types/randomstring": "^1.1.8",
    "eslint": "^8.18.0",
    "nodemon": "^2.0.20",
    "typescript": "^4.5.5"
  },
  "scripts": {
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "load-env": "env-cmd --silent --no-override -f ../../.env env-cmd --silent --no-override",
    "start": "yarn run load-env ts-node --transpile-only ./src",
    "start:dev": "yarn run load-env nodemon ./src"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts, html",
    "exec": "ts-node --files"
  }
}
