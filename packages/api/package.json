{
  "name": "api",
  "version": "0.13.0",
  "license": "GPL-3.0-or-later",
  "description": "The Praise REST API running on Nest.js, using MongoDB for storage.",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "yarn run prebuild && nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "load-env": "env-cmd --silent --no-override -f ../../.env env-cmd --silent --no-override",
    "start": "yarn run load-env nest start",
    "start:dev": "yarn run load-env nest start --watch",
    "start:debug": "yarn run load-env nest start --debug --watch",
    "start:prod": "yarn run load-env node dist/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "yarn run load-env jest --watchAll --config ./jest.config.js",
    "test:watch": "yarn run load-env jest --watch",
    "test:cov": "yarn run load-env jest --coverage",
    "test:e2e": "NODE_ENV=testing && MONGO_DB=praise-test yarn run load-env jest --config ./jest-e2e.config.js --runInBand --silent=false"
  },
  "dependencies": {
    "@faker-js/faker": "^7.6.0",
    "@json2csv/node": "^6.1.2",
    "@nestjs/cache-manager": "^1.0.0",
    "@nestjs/common": "^9.4.0",
    "@nestjs/config": "^2.3.1",
    "@nestjs/core": "^9.4.0",
    "@nestjs/jwt": "^10.0.3",
    "@nestjs/mapped-types": "*",
    "@nestjs/mongoose": "^9.2.2",
    "@nestjs/platform-express": "^9.4.0",
    "@nestjs/swagger": "^6.3.0",
    "@nestjs/throttler": "^4.0.0",
    "@octokit/rest": "^19.0.7",
    "@octokit/types": "^9.1.0",
    "JSONStream": "^1.3.5",
    "axios": "^1.3.2",
    "bcrypt": "^5.1.0",
    "bin-packer": "^1.7.0",
    "cache-manager": "^5.2.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "date-fns": "^2.29.3",
    "duckdb": "^0.7.0",
    "env-cmd": "^10.1.0",
    "ethers": "^5.7.2",
    "express-fileupload": "^1.3.1",
    "greedy-number-partitioning": "https://github.com/mattyg/greedy-number-partitioning.git",
    "lodash": "^4.17.21",
    "mime-types": "^2.1.34",
    "mongodb": "^4.14.0",
    "mongoose": "^6.11.3",
    "mongoose-paginate-v2": "^1.7.1",
    "nest-winston": "^1.9.1",
    "nestjs-request-context": "^2.1.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "umzug": "^3.2.1",
    "winston": "^3.8.2",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.3.0",
    "@nestjs/schematics": "^9.1.0",
    "@nestjs/testing": "^9.4.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.14",
    "@types/express-fileupload": "^1.2.2",
    "@types/jest": "29.5.0",
    "@types/lodash": "^4.14.179",
    "@types/mime-types": "^2.1.1",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.14.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest-extended": "^2.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "29.5.0",
    "jest-extended": "^3.2.4",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "29.0.5",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "typescript": "^4.7.4"
  }
}
